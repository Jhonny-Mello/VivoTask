<Router AppAssembly="@typeof(MainTask).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayoutVivoTask)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayoutVivoTask)">
            <p role="alert">Desculpe, Não há nada neste endereço.</p>
        </LayoutView>
    </NotFound>
</Router>
