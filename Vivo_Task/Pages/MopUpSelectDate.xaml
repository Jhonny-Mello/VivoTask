<?xml version="1.0" encoding="utf-8" ?>
<mopups:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Vivo_Task.Pages.MopUpSelectDate"
              Color="Transparent"
              CanBeDismissedByTappingOutsideOfPopup="false"
             VerticalOptions="Center"
             HorizontalOptions="Center">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" 
                Padding="10,10,10,50" WidthRequest="150" 
                HeightRequest="150" BackgroundColor="Transparent">
        <DatePicker 
                x:Name="datePicker"
                DateSelected="datePicker_DateSelected"
                BackgroundColor="White"
                TextColor="Black" FontSize="20"
                WidthRequest="0"
                HeightRequest="0">
        </DatePicker>
    </StackLayout>
    
</mopups:Popup>
