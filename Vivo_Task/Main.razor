<Router AppAssembly="@typeof(Main).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(SinglePageLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(SinglePageLayout)">
            <p role="alert">Desculpe, Não há nada neste endereço.</p>
        </LayoutView>
    </NotFound>
</Router>
<Blazorise.PageProgressProvider />
<NotificationProvider />
<Blazorise.MessageProvider />
